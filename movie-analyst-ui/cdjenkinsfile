pipeline{
agent any
stages {
    stage('Checkout Source') {
      steps {
        git 'https://github.com/davidsmenesesc/rampup.git'
      }
    }  
    stage('Deploying App to Kubernetes') {
      steps {
        script {
        dir('kube') {
                sh'ls'
                kubernetesDeploy(configs: "movie_analyst_ui.yaml", kubeconfigId: "kubernetes")
            }    
        }
      }
    }
  }
} 