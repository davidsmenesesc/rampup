pipeline {

  environment {
    dockerimagebackend = "davidsmenesesc/rampup-back"
    dockerBack= ""
    dockerFront= ""
    dockerimagefrontend = "davidsmenesesc/rampup-front"
  }

agent any

stages {

    stage('Checkout Source') {
      steps {
        git 'https://github.com/davidsmenesesc/rampup.git'
      }
    }
    stage('Build image') {
      steps{
        script {
        dir('rampup/movie-analyst-api') {
                //dockerBack = docker.build dockerimagebackend
                dockerBack = sh'docker build -t davidsmenesesc/rampup-back Dockerfile'
            }   
        dir('rampup/movie-analyst-ui') {
                dockerFront = docker.build dockerimagefrontend
            }               
        }
      }
    }
 }
}