pipeline {

  environment {
    dockerimagebackend = "davidsmenesesc/rampup-back"
    dockerBack= ""
    dockerFront= ""
    dockerimagefrontend = "davidsmenesesc/rampup-front"
  }

agent any

stages {

    stage('Checkout Source') {
      steps {
        git 'https://github.com/davidsmenesesc/rampup.git'
      }
    }
    stage('Test') {
      steps{
        script {
        dir('movie-analyst-api/test') {
                sh 'ls'
                sh 'npm install'
                sh 'npm test'
            }             
        }
      }
    }
    stage('Build image') {
      steps{
        script {
        dir('movie-analyst-api') {
                dockerBack = docker.build dockerimagebackend
            }   
        dir('movie-analyst-ui') {
                dockerFront = docker.build dockerimagefrontend
            }               
        }
      }
    }
    stage('Pushing Image') {
      environment {
               registryCredential = 'registryCredential'
           }
      steps{
        script {
          docker.withRegistry( 'https://registry.hub.docker.com', registryCredential ) {
            dockerBack.push("v"+$BUILD_NUMBER)
            dockerFront.push("v"+$BUILD_NUMBER)
          }
        }
      }
    }
 }
}